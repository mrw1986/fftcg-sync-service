131: function getFileIcon(name: string): string {
132:   const extension = name.split('.').pop()?.toLowerCase()
133:   switch (extension) {
134:     case 'ts':
135:     case 'tsx':
136:       return 'ðŸ“˜'
137:     case 'js':
138:     case 'jsx':
139:       return 'ðŸ“’'
140:     case 'json':
141:       return 'ðŸ“‹'
142:     case 'md':
143:       return 'ðŸ“'
144:     case 'env':
145:       return 'ðŸ”‘'
146:     case 'rules':
147:       return 'ðŸ“œ'
148:     default:
149:       return 'ðŸ“„'
150:   }
151: }
152: 
153: const renderTreeNode = (node: TreeNode, level: number = 0) => {
154:   return h('div',
155:     {
156:       class: 'tree-node',
157:       style: { paddingLeft: `${level * 20}px` }
158:     },
