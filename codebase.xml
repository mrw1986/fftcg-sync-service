  6: import {GenericError, ImageMetadata} from "../types";
  7: import {ImageValidator} from "./imageValidator";
  8: 
  9: interface ImageProcessingResult {
 10:   originalUrl: string;
 11:   highResUrl: string;
 12:   metadata: ImageMetadata;
 13:   updated: boolean;
 14: }
 15: 
 16: const cacheOptions = {
 17:   max: 1000,
 18:   ttl: 1000 * 60 * 60, // 1 hour
 19: };
 20: 
 21: const imageMetadataCache = new LRUCache<string, ImageMetadata>(cacheOptions);
 22: const imageExistsCache = new LRUCache<string, boolean>(cacheOptions);
 23: const imageBufferCache = new LRUCache<string, Buffer>({
 24:   max: 100,
 25:   ttl: 1000 * 60 * 5, // 5 minutes
 26: });
 27: 
 28: export class ImageHandler {
 29:   private bucket = storage.bucket(STORAGE.BUCKETS.CARD_IMAGES);
 30: 
 31:   private getHighResUrl(imageUrl: string): string {
 32:     return imageUrl.replace(/_200w\.jpg$/, "_400w.jpg");
 33:   }
 34: 
 35:   private getStoragePath(groupId: string, productId: number, isHighRes: boolean = false): string {
 36:     const suffix = isHighRes ? "_400w" : "_200w";
 37:     return `${STORAGE.PATHS.IMAGES}/${groupId}/${productId}${suffix}.jpg`;
 38:   }
 39: 
 40:   private async getImageHash(imageBuffer: Buffer): Promise<string> {
 41:     return crypto.createHash("md5").update(imageBuffer).digest("hex");
 42:   }
 43: 
 44:   private async downloadImage(url: string): Promise<Buffer> {
 45:     const cacheKey = `download:${url}`;
 46:     const cachedBuffer = imageBufferCache.get(cacheKey);
 47: 
 48:     if (cachedBuffer) {
 49:       await logInfo("Using cached image", {
 50:         url,
 51:         size: cachedBuffer.length,
 52:         timestamp: new Date().toISOString(),
 53:       });
 54:       return cachedBuffer;
 55:     }
 56: 
 57:     try {
 58:       await logInfo("Attempting to download image", {
 59:         url,
 60:         timestamp: new Date().toISOString(),
 61:       });
 62: 
 63:       const response = await axios.get(url, {
 64:         responseType: "arraybuffer",
 65:         timeout: 30000,
 66:         headers: {
 67:           "Accept": "image/jpeg",
 68:           "User-Agent": "FFTCG-Sync-Service/1.0",
 69:         },
 70:       });
 71: 
 72:       const buffer = Buffer.from(response.data);
 73:       const validationError = await ImageValidator.validateImage(buffer);
 74: 
 75:       if (validationError) {
 76:         throw new Error(`Image validation failed: ${validationError.message}`);
 77:       }
 78: 
 79:       imageBufferCache.set(cacheKey, buffer);
 80: 
 81:       await logInfo("Successfully downloaded and validated image", {
 82:         url,
 83:         size: buffer.length,
 84:         timestamp: new Date().toISOString(),
 85:       });
 86: 
 87:       return buffer;
 88:     } catch (error) {
 89:       await logWarning("Failed to download or validate image", {
 90:         url,
 91:         error: error instanceof Error ? error.message : "Unknown error",
 92:         timestamp: new Date().toISOString(),
 93:       });
 94:       throw error;
 95:     }
 96:   }
 97: 
 98:   private async shouldUpdateImage(
 99:     groupId: string,
100:     productId: number,
101:     imageBuffer: Buffer,
102:     isHighRes: boolean
103:   ): Promise<boolean> {
104:     const storagePath = this.getStoragePath(groupId, productId, isHighRes);
105:     const cacheKey = `${groupId}:${productId}:${isHighRes ? "high" : "original"}`;
106: 
107:     try {
108:       const cachedMetadata = imageMetadataCache.get(cacheKey);
109:       if (cachedMetadata) {
110:         const newHash = await this.getImageHash(imageBuffer);
111:         return cachedMetadata.hash !== newHash;
112:       }
113: 
114:       const exists = imageExistsCache.get(cacheKey);
115:       if (exists === false) return true;
116: 
117:       const [fileExists] = await this.bucket.file(storagePath).exists();
118:       imageExistsCache.set(cacheKey, fileExists);
119: 
120:       if (!fileExists) return true;
121: 
122:       const [metadata] = await this.bucket.file(storagePath).getMetadata();
123:       const currentHash = metadata.metadata?.hash;
124:       const newHash = await this.getImageHash(imageBuffer);
125: 
126:       return currentHash !== newHash;
127:     } catch (error) {
128:       const genericError: GenericError = {
129:         message: error instanceof Error ? error.message : "Unknown error",
130:         name: error instanceof Error ? error.name : "UnknownError",
131:         code: error instanceof AxiosError ? error.code : undefined,
132:         stack: error instanceof Error ? error.stack : undefined,
133:       };
134:       await logError(genericError, "shouldUpdateImage");
135:       return true;
136:     }
137:   }
138: 
139:   private async saveMetadata(
140:     groupId: string,
141:     productId: number,
142:     metadata: ImageMetadata
143:   ): Promise<void> {
144:     const docRef = db.collection(COLLECTION.IMAGE_METADATA)
145:       .doc(`${groupId}_${productId}`);
146: 
147:     await docRef.set({
148:       ...metadata,
149:       groupId,
150:       productId,
151:       lastUpdated: new Date(),
152:     }, {merge: true});
153: 
154:     const cacheKey = `${groupId}:${productId}`;
155:     imageMetadataCache.set(cacheKey, metadata);
156:   }
157: 
158:   async processImage(
159:     imageUrl: string,
160:     groupId: string,
161:     productId: number
162:   ): Promise<ImageProcessingResult> {
163:     try {
164:       await logInfo("Processing image", {
165:         productId,
166:         groupId,
167:         originalUrl: imageUrl,
168:         highResUrl: this.getHighResUrl(imageUrl),
169:         timestamp: new Date().toISOString(),
170:       });
171: 
172:       const highResUrl = this.getHighResUrl(imageUrl);
173:       let originalBuffer: Buffer | null = null;
174:       let highResBuffer: Buffer | null = null;
175:       let updated = false;
176: 
177:       try {
178:         originalBuffer = await this.downloadImage(imageUrl);
179:       } catch (error) {
180:         await logWarning("Original image download failed", {
181:           productId,
182:           url: imageUrl,
183:           error: error instanceof Error ? error.message : "Unknown error",
184:           timestamp: new Date().toISOString(),
185:         });
186:       }
187: 
188:       try {
189:         highResBuffer = await this.downloadImage(highResUrl);
190:       } catch (error) {
191:         await logWarning("High-res image download failed", {
192:           productId,
193:           url: highResUrl,
194:           error: error instanceof Error ? error.message : "Unknown error",
195:           timestamp: new Date().toISOString(),
196:         });
197:       }
198: 
199:       if (!originalBuffer && !highResBuffer) {
200:         throw new Error(`Failed to download both image versions for product ${productId}`);
201:       }
202: 
203:       const metadata: ImageMetadata = {
204:         contentType: "image/jpeg",
205:         size: 0,
206:         updated: new Date(),
207:         hash: "",
208:         originalUrl: imageUrl,
209:         highResUrl: highResUrl,
210:         originalSize: originalBuffer?.length,
211:         highResSize: highResBuffer?.length,
212:       };
213: 
214:       if (originalBuffer) {
215:         const originalNeedsUpdate = await this.shouldUpdateImage(groupId, productId, originalBuffer, false);
216:         if (originalNeedsUpdate) {
217:           const originalPath = this.getStoragePath(groupId, productId, false);
218:           const originalHash = await this.getImageHash(originalBuffer);
219:           await this.bucket.file(originalPath).save(originalBuffer, {
220:             metadata: {
221:               contentType: "image/jpeg",
222:               metadata: {
223:                 hash: originalHash,
224:                 type: "original",
225:                 updatedAt: new Date().toISOString(),
226:               },
227:             },
228:           });
229:           updated = true;
230:           metadata.hash = originalHash;
231:           metadata.size = originalBuffer.length;
232:         }
233:       }
234: 
235:       if (highResBuffer) {
236:         const highResNeedsUpdate = await this.shouldUpdateImage(groupId, productId, highResBuffer, true);
237:         if (highResNeedsUpdate) {
238:           const highResPath = this.getStoragePath(groupId, productId, true);
239:           const highResHash = await this.getImageHash(highResBuffer);
240:           await this.bucket.file(highResPath).save(highResBuffer, {
241:             metadata: {
242:               contentType: "image/jpeg",
243:               metadata: {
244:                 hash: highResHash,
245:                 type: "highres",
246:                 updatedAt: new Date().toISOString(),
247:               },
248:             },
249:           });
250:           updated = true;
251:         }
252:       }
253: 
254:       await this.saveMetadata(groupId, productId, metadata);
255: 
256:       const [originalStorageUrl] = await this.bucket.file(
257:         this.getStoragePath(groupId, productId, false)
258:       ).getSignedUrl({
259:         action: "read",
260:         expires: "03-01-2500",
261:       });
262: 
263:       const [highResStorageUrl] = await this.bucket.file(
264:         this.getStoragePath(groupId, productId, true)
265:       ).getSignedUrl({
266:         action: "read",
267:         expires: "03-01-2500",
268:       });
269: 
270:       return {
271:         originalUrl: originalStorageUrl,
272:         highResUrl: highResStorageUrl,
273:         metadata,
274:         updated,
275:       };
276:     } catch (error) {
277:       const genericError: GenericError = {
278:         message: error instanceof Error ? error.message : "Unknown error",
279:         name: error instanceof Error ? error.name : "UnknownError",
280:         code: error instanceof AxiosError ? error.code : undefined,
281:         stack: error instanceof Error ? error.stack : undefined,
282:       };
283:       await logError({
284:         ...genericError,
285:         metadata: {
286:           productId,
287:           groupId,
288:           originalUrl: imageUrl,
289:           highResUrl: this.getHighResUrl(imageUrl),
290:           timestamp: new Date().toISOString(),
291:         },
292:       }, "processImage");
293:       return {
294:         originalUrl: imageUrl,
295:         highResUrl: this.getHighResUrl(imageUrl),
296:         metadata: {
297:           contentType: "image/jpeg",
298:           size: 0,
299:           updated: new Date(),
300:           hash: "",
301:           originalUrl: imageUrl,
302:           highResUrl: this.getHighResUrl(imageUrl),
303:         },
304:         updated: false,
305:       };
306:     }
307:   }
308: 
309:   async cleanup(dryRun = true): Promise<void> {
310:     try {
311:       const [files] = await this.bucket.getFiles({
312:         prefix: STORAGE.PATHS.IMAGES,
313:       });
314: 
315:       const activeImages = await db.collection(COLLECTION.IMAGE_METADATA).get();
316:       const activeImagePaths = new Set([
317:         ...activeImages.docs.map((doc) => this.getStoragePath(
318:           doc.data().groupId,
319:           doc.data().productId,
320:           false
321:         )),
322:         ...activeImages.docs.map((doc) => this.getStoragePath(
323:           doc.data().groupId,
324:           doc.data().productId,
325:           true
326:         )),
327:       ]);
328: 
329:       let deletedCount = 0;
330:       for (const file of files) {
331:         if (!activeImagePaths.has(file.name)) {
332:           if (!dryRun) {
333:             await file.delete();
334:           }
335:           deletedCount++;
336:         }
337:       }
338: 
339:       await logInfo("Cleanup complete", {
340:         deletedCount,
341:         mode: dryRun ? "dry-run" : "actual",
342:         timestamp: new Date().toISOString(),
343:       });
344:     } catch (error) {
345:       const genericError: GenericError = {
346:         message: error instanceof Error ? error.message : "Unknown error",
347:         name: error instanceof Error ? error.name : "UnknownError",
348:         code: error instanceof AxiosError ? error.code : undefined,
349:         stack: error instanceof Error ? error.stack : undefined,
