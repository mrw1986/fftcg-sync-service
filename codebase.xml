 38:     };
 39: 
 40:     const hasValidNormal = price.normal ? validatePriceData(price.normal) : false;
 41:     const hasValidFoil = price.foil ? validatePriceData(price.foil) : false;
 42: 
 43:     return hasValidNormal || hasValidFoil;
