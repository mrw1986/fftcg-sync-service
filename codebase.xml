453:   await db.collection(COLLECTION.SYNC_METADATA)
454:     .where('status', '==', 'failed')
455:     .get()
456:     .then(snapshot => {
457:       const batch = db.batch();
458:       snapshot.forEach(doc => {
459:         batch.update(doc.ref, { status: 'ready' });
460:       });
461:       return batch.commit();
462:     });
463: }
