72:     dryRun: args.includes("--dry-run"),
73:     limit: args.includes("--limit") ?
74:       parseInt(args[args.indexOf("--limit") + 1]) :
75:       undefined,
76:     groupId: args.includes("--group-id") ?
77:       args[args.indexOf("--group-id") + 1] :
78:       undefined,
79:   };
