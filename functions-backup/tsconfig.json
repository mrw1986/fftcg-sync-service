{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": ["node", "express"],
    "baseUrl": "./src"
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    ".eslintrc.js",
    ".eslintrc.fix.js",
    ".eslintrc.base.cjs"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}