{
  "name": "functions",
  "scripts": {
    "clean": "rimraf lib",
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --ext .js,.ts . --fix",
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions,firestore,storage",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run lint:fix && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint:fix:force": "eslint . --ext .js,.ts --fix --config .eslintrc.fix.js",
    "test:images": "ts-node src/test/testImageHandler.ts",
    "test:sync": "ts-node src/test/testSync.ts",
    "test:all": "npm run test:images && npm run test:sync",
    "backup-db": "ts-node src/utils/databaseBackup.ts",
    "clear-db": "ts-node src/utils/databaseReset.ts",
    "sync:data": "ts-node src/utils/databaseRefresh.ts --skip-images",
    "sync:data:force": "ts-node src/utils/databaseRefresh.ts --skip-images --force",
    "sync:data:dry": "ts-node src/utils/databaseRefresh.ts --skip-images --dry-run",
    "sync:data:verbose": "ts-node src/utils/databaseRefresh.ts --skip-images --verbose",
    "sync:images": "ts-node src/utils/databaseRefresh.ts --images-only",
    "sync:images:force": "ts-node src/utils/databaseRefresh.ts --images-only --force",
    "sync:images:dry": "ts-node src/utils/databaseRefresh.ts --images-only --dry-run",
    "sync:images:verbose": "ts-node src/utils/databaseRefresh.ts --images-only --verbose",
    "sync:full": "ts-node src/utils/databaseRefresh.ts",
    "sync:full:force": "ts-node src/utils/databaseRefresh.ts --force",
    "sync:full:dry": "ts-node src/utils/databaseRefresh.ts --dry-run",
    "sync:full:verbose": "ts-node src/utils/databaseRefresh.ts --verbose",
    "sync:group": "ts-node src/utils/databaseRefresh.ts --group-id",
    "sync:group:images": "ts-node src/utils/databaseRefresh.ts --group-id --images-only",
    "sync:group:data": "ts-node src/utils/databaseRefresh.ts --group-id --skip-images",
    "cleanup:images": "ts-node src/utils/databaseCleanup.ts"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.1.1",
    "lru-cache": "^7.14.1",
    "sharp": "^0.33.1",
    "refresh-db": "ts-node src/utils/databaseRefresh.ts"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^18.19.64",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "rimraf": "^5.0.0",
    "typescript": "^4.9.5"
  },
  "private": true
}
