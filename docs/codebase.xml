24708: 22057: 271:       attempts++;
24709: 22058: 272:       await logWarning(
24710: 22059: 273:         `Recovery attempt ${attempts} failed`,
24711: 22060: 274:         { error: recoveryError }
24712: 22061: 275:       );
24713: 22062: 276:     }
24714: 22063: 277:   }
24715: 22064: 278: 
24716: 22065: 279:   return recovered;
24717: 22066: 280: }
24718: 22067: 281: ```
