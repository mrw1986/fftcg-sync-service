28209: 153: if (retryCount < MAX_RETRIES - 1) {
28210: 154:   const delay = Math.pow(2, retryCount) * BASE_DELAY;
28211: 155:   await logWarning(`Request failed, retrying in ${delay}ms...`);
28212: 156: }
28213: 157: ```
