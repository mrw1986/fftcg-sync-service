 1613: 252:   )
 1614: 253:   ctx.moveTo(end.x, end.y)
 1615: 254:   ctx.lineTo(
 1616: 255:     end.x - arrowLength * Math.cos(angle + Math.PI/6),
 1617: 256:     end.y - arrowLength * Math.sin(angle + Math.PI/6)
 1618: 257:   )
 1619: 258:   ctx.stroke()
