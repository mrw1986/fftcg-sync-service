14933: 12282:  9649: 7102: 102:     try {
14934: 12283:  9650: 7103: 103:       return await requestHandler.get<T>(url, options);
14935: 12284:  9651: 7104: 104:     } catch (error) {
14936: 12285:  9652: 7105: 105:       attempt++;
