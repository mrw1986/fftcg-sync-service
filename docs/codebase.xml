111:     // Dynamically adjust batch size based on processing time
112:     if (lastProcessingTime > 1000) {
113:       this.optimalBatchSize = Math.max(10, this.optimalBatchSize * 0.8);
114:     } else if (lastProcessingTime < 500) {
