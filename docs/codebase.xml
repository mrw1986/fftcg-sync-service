23860: 21209: 514:           { context, error: lastError.message }
23861: 21210: 515:         );
23862: 21211: 516:        
23863: 21212: 517:         await new Promise(resolve => setTimeout(resolve, delay));
23864: 21213: 518:       }
23865: 21214: 519:     }
23866: 21215: 520:    
23867: 21216: 521:     throw lastError!;
23868: 21217: 522:   }
23869: 21218: 523: }
