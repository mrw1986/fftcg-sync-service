25322: 22671:  71:     return SUPPORTED_FORMATS.includes(
25323: 22672:  72:       `image/${metadata.format}` as typeof SUPPORTED_FORMATS[number]
25324: 22673:  73:     );
25325: 22674:  74:   } catch {
25326: 22675:  75:     return false;
25327: 22676:  76:   }
25328: 22677:  77: }
